<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_category_general">
        <EditTextPreference
            android:defaultValue="9"
            android:inputType="number"
            android:key="pref_max_input_number"
            android:title="@string/pref_max_input_number" />
    </PreferenceCategory>


    <PreferenceCategory android:title="@string/pref_category_display">
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pref_language_title"
            android:entryValues="@array/pref_language_values"
            android:key="pref_language"
            android:summary="%s"
            android:title="@string/pref_language_title" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pref_screen_color_title"
            android:entryValues="@array/pref_screen_color_values"
            android:key="pref_screen_color"
            android:summary="%s"
            android:title="@string/pref_screen_color" />
    </PreferenceCategory>
</PreferenceScreen>
